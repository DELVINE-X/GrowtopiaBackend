<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Growtopia - Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="flex items-center justify-center min-h-screen bg-transparent">

  <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-40 backdrop-blur-sm">
    <div class="relative flex flex-col md:flex-row bg-[#a67c00]/90 border-4 border-[#ffcc80] shadow-2xl p-8 w-[90%] max-w-[750px] rounded-xl backdrop-blur-md items-center justify-between animate-slideUp">
      
      <!-- Left Side -->
      <div class="flex flex-col items-start justify-center w-full md:w-1/2 mb-6 md:mb-0 pr-0 md:pr-4">
        <p class="text-white font-extrabold text-4xl mb-4 drop-shadow-lg leading-tight animate-bounce-slow">
          Log into your<br><span class="text-[#ffd54f]">GTPS ID</span>
        </p>
        <p class="text-sm text-white opacity-90 mb-3">
          Welcome back, farmer! üåæ<br>Let's grow your adventure again!
        </p>
        <div class="flex space-x-2 mt-2">
          <span class="text-xs bg-[#ffcc80] text-[#a67c00] px-2 py-1 rounded-full font-bold shadow">üåª Harvest Time!</span>
          <span class="text-xs bg-[#ffd54f] text-[#5d4037] px-2 py-1 rounded-full font-bold shadow">üçÉ New Season</span>
        </div>
      </div>

      <!-- Right Side: Form -->
      <div class="w-full md:w-1/2">
        <div id="errorDiv" class="hidden mb-2 text-xs text-red-700 font-bold px-[5px] bg-[#a67c00]/80 rounded">
          <a id="errorMessage"></a>
        </div>

        <form method="post" action="#" id="loginForm">
          <div class="mb-3">
            <label for="loginGrowId" class="block text-white text-xs mb-1">GrowID</label>
            <div class="flex items-center border-2 border-[#ffd54f] rounded bg-[#a67c00]/70 px-2 py-2">
              <i class="fas fa-user text-white mr-2 text-sm"></i>
              <input type="text" name="growId" id="loginGrowId" class="w-full bg-transparent text-white text-xs placeholder-white focus:outline-none" placeholder="Enter your GrowID">
            </div>
          </div>

          <div class="mb-3">
            <label for="loginPassword" class="block text-white text-xs mb-1">Password</label>
            <div class="flex items-center border-2 border-[#ffd54f] rounded bg-[#a67c00]/70 px-2 py-2">
              <i class="fas fa-lock text-white mr-2 text-sm"></i>
              <input type="password" name="password" id="loginPassword" class="w-full bg-transparent text-white text-xs placeholder-white focus:outline-none" placeholder="Enter your Password">
              <button type="button" id="toggleLogPassword" class="text-white ml-2 text-xs">
                <i class="fas fa-eye"></i>
              </button>
            </div>
          </div>

          <div class="flex justify-end mt-4">
            <button type="submit" class="px-5 py-2 rounded bg-gradient-to-r from-yellow-400 to-yellow-600 text-white text-xs hover:from-yellow-500 hover:to-yellow-700 transition duration-300 ease-in-out transform hover:scale-105 font-bold shadow-md">
              Start dek
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const loginForm = document.getElementById('loginForm');
      const growIdInput = document.getElementById('loginGrowId');
      const passwordInput = document.getElementById('loginPassword');
      const errorDiv = document.getElementById('errorDiv');
      const errorMessage = document.getElementById('errorMessage');
      const togglePasswordBtn = document.getElementById('toggleLogPassword');

      // Prefill GrowID
      if (localStorage.getItem('growId')) {
        growIdInput.value = localStorage.getItem('growId');
      }

      // Show/hide password
      togglePasswordBtn.addEventListener('click', function () {
        const isPassword = passwordInput.getAttribute('type') === 'password';
        passwordInput.setAttribute('type', isPassword ? 'text' : 'password');
        this.innerHTML = isPassword ? '<i class="fas fa-eye-slash"></i>' : '<i class="fas fa-eye"></i>';
      });

      // Handle form submit
      loginForm.addEventListener('submit', async function (event) {
        event.preventDefault();

        const growId = growIdInput.value.trim();
        const password = passwordInput.value.trim();

        if (!growId || !password) {
          showError('Username or Password is empty');
          return;
        }

        if (growId.length < 4 || password.length < 4) {
          showError('Username or Password must be at least 4 characters long');
          return;
        }

        try {
          const res = await fetch('http://localhost:3000/player/growid/login/validate', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ growId, password })
          });

          const data = await res.json();

          if (!data.success) {
            showError(data.message || 'Login failed.');
          } else {
            localStorage.setItem('growId', growId);
            window.location.href = '/dashboard'; // Ganti sesuai halaman dashboard kamu
          }
        } catch (err) {
          showError('Server tidak merespons.');
        }
      });

      function showError(msg) {
        errorDiv.classList.remove('hidden');
        errorMessage.textContent = msg;
      }
    });
  </script>
</body>
</html>
